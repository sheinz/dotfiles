    status_command /usr/share/bumblebee-status/bumblebee-status -m redshift nic disk:root cpu memory date time pasink -p nic.exclude="veth,lo,vmnet" root.path=/ time.format="%H:%M CW %V" date.format="%a, %b %d" -t powerline
}

set $mode_launcher Launch: [f]irefox [t]elegram [p]erforce
bindsym $mod+o mode "$mode_launcher"

mode "$mode_launcher" {
    bindsym f exec firefox; mode "default"
    bindsym t exec Telegram; mode "default"
    bindsym p exec p4v; mode "default"

    bindsym Escape mode "default"
    bindsym Return mode "default"
}

